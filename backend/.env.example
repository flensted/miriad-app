# Cast Backend Environment Variables
# Copy this file to .env and fill in your values

# PlanetScale Database Connection
# Format: postgres://user:password@host:port/database
PLANETSCALE_URL=postgres://your_user:your_password@us-east-2.pg.psdb.cloud:6432/postgres

# Anthropic API Key (for Claude in containers)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# Server Configuration
PORT=3234
SPACE_ID=default-space

# Cast API URL - the publicly accessible URL for this backend
# Used for OAuth redirects and container callbacks
# In local dev: http://localhost:3234
# In production: https://your-api-domain.com
CAST_API_URL=http://localhost:3234

# Docker Configuration
AGENT_IMAGE=claude-code:local

# Authentication Mode
# REQUIRED for local development: Set to "dev" to enable dev auth routes (/auth/dev/*)
# In production, omit this or set to "workos" for WorkOS authentication
AUTH_MODE=dev

# JWT Secret
# Required for production. In dev, a warning is shown and a default is used.
# Generate with: openssl rand -base64 32
# JWT_SECRET=your-secret-here

# Optional: Container secret for production (auto-generated in dev)
# CAST_CONTAINER_SECRET=your-secret-here

# =============================================================================
# App Integrations (OAuth)
# =============================================================================

# Secret key for encrypting OAuth tokens stored in the database
# Generate with: openssl rand -base64 32
# Required for app integrations to work
SECRET_KEY=your-encryption-secret-here

# GitHub OAuth App credentials
# Create an OAuth App at: https://github.com/settings/developers
# Set the callback URL to: ${CAST_API_URL}/api/apps/callback/github
# GITHUB_CLIENT_ID=your-github-client-id
# GITHUB_CLIENT_SECRET=your-github-client-secret
