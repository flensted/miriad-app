{
  "name": "@miriad-systems/backend",
  "version": "0.1.3",
  "description": "Run Miriad agents on your local machine, container, or VPS",
  "type": "module",
  "main": "./dist/cli.js",
  "bin": "./dist/cli.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit"
